<?xml version="1.0" encoding="utf-8"?>
<TableLayout android:id="@+id/remote_control_table"
             xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:stretchColumns="*">
    <TableRow
        android:layout_weight="1">

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_oneButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="1"/>

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_twoButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="2"/>

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_threeButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="3"/>
    </TableRow>

    <TableRow
        android:layout_weight="1">

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_fourButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="4"/>

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_fiveButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="5"/>

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_sixButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="6"/>
    </TableRow>

    <TableRow
        android:layout_weight="1">

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_sevenButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="7"/>

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_eightButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="8"/>

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_nineButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="9"/>
    </TableRow>

    <TableRow
        android:layout_weight="1">

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_deleteButton"
            style="@style/RemoteButton"
            app:buttonType="DELETE"/>

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_zeroButton"
            style="@style/RemoteButton"
            app:buttonType="NUMBER"
            app:numberValue="0"/>

        <com.bignerdranch.remotecontrol.Widgets.RemoteButtonWidget
            android:id="@+id/remote_control_enterButton"
            style="@style/RemoteButton"
            app:buttonType="ENTER"/>
    </TableRow>
</TableLayout>